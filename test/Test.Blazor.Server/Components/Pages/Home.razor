@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<button class="btn btn-primary" @onclick="ShowToast">Show Toast</button>
<button class="btn btn-danger" @onclick="ShowSecondToast">Show Error Toast</button>

@code {
    public void ShowToast()
    {
        
        ToastService.Info("Sample Notification.", 5000);
    }

    public void ShowSecondToast()
    {
        ToastService.Error("Paused toasts never resume properly due to TokenSource not being updated.");
    }
}